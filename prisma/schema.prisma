generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Unit {
  id               Int      @id @default(autoincrement())
  code             String   @unique
  name             String

  tokenProducao    String?
  tokenHomologacao String?

  ambiente         String   @default("HOMOLOGACAO")
  active           Boolean  @default(true)

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  rawData         RawData[]
  remittances     Remittance[]
  userPermissions UserPermission[]

  @@map("units")
}

model EndpointConfig {
  id          Int      @id @default(autoincrement())
  module      String   @unique
  endpoint    String
  method      String   @default("POST")
  description String?
  active      Boolean  @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("endpoint_configs")
}

model ValidationRule {
  id        Int      @id @default(autoincrement())
  module    String
  field     String
  operator  String
  value     String
  level     String
  code      String
  message   String
  active    Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("validation_rules")
}

model RawData {
  id         Int      @id @default(autoincrement())
  unitId     Int
  module     String
  competency String
  payload    Json
  status     String   @default("RECEIVED")

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  unit            Unit              @relation(fields: [unitId], references: [id])
  transformedData TransformedData[]
  validations     Validation[]

  @@map("raw_data")
}

model TransformedData {
  id        Int      @id @default(autoincrement())
  rawId     Int
  payload   Json

  createdAt DateTime @default(now())

  rawData RawData @relation(fields: [rawId], references: [id])

  @@map("transformed_data")
}

model Validation {
  id        Int      @id @default(autoincrement())
  rawId     Int
  ruleId    Int?
  level     String
  code      String
  message   String
  field     String?
  value     String?

  createdAt DateTime @default(now())

  rawData RawData @relation(fields: [rawId], references: [id])

  @@map("validations")
}

model Remittance {
  id         Int       @id @default(autoincrement())
  unitId     Int
  module     String
  competency String
  status     String    @default("PENDING")
  payload    Json
  protocol   String?
  errorMsg   String?

  createdAt  DateTime  @default(now())
  sentAt     DateTime?
  updatedAt  DateTime  @updatedAt

  unit           Unit            @relation(fields: [unitId], references: [id])
  remittanceLogs RemittanceLog[]

  @@map("remittances")
}

model RemittanceLog {
  id           Int      @id @default(autoincrement())
  remittanceId Int
  direction    String
  url          String?
  method       String?
  headers      Json?
  body         Json?
  statusCode   Int?
  duration     Int?

  createdAt    DateTime @default(now())

  remittance Remittance @relation(fields: [remittanceId], references: [id])

  @@map("remittance_logs")
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int?
  action    String
  entity    String
  entityId  Int?
  oldValue  Json?
  newValue  Json?
  ip        String?
  userAgent String?

  createdAt DateTime @default(now())

  @@index([entity, entityId])
  @@index([createdAt])
  @@map("audit_logs")
}

model User {
  id                  Int       @id @default(autoincrement())
  email               String    @unique
  name                String
  passwordHash        String
  role                String    @default("OPERATOR")
  active              Boolean   @default(true)
  
  lastLogin           DateTime?
  lastActivity        DateTime?
  failedLoginAttempts Int       @default(0)
  lockedUntil         DateTime?
  
  refreshToken        String?
  refreshTokenExp     DateTime?
  
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  sessions    UserSession[]
  permissions UserPermission[]

  @@map("users")
}

model UserSession {
  id           Int       @id @default(autoincrement())
  userId       Int
  token        String    @unique
  ip           String?
  userAgent    String?

  expiresAt    DateTime
  createdAt    DateTime  @default(now())

  lastActivity DateTime  @default(now())
  
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@map("user_sessions")
}

// Permissões granulares por usuário
model UserPermission {
  id        Int      @id @default(autoincrement())
  userId    Int
  unitId    Int?     // null = todas as UGs
  module    String?  // null = todos os módulos
  
  // Ações permitidas
  canView       Boolean @default(false)
  canCreate     Boolean @default(false)
  canEdit       Boolean @default(false)
  canDelete     Boolean @default(false)
  canTransmit   Boolean @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  unit Unit? @relation(fields: [unitId], references: [id], onDelete: Cascade)

  @@unique([userId, unitId, module])
  @@index([userId])
  @@index([unitId])
  @@map("user_permissions")
}
